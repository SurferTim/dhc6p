<PropertyList>

    <name>dhc6-about</name>
    <layout>vbox</layout>
    <resizable>false</resizable>
    <modal>false</modal>
    <draggable>true</draggable>

    <group>
        <layout>hbox</layout>
        <empty><stretch>true</stretch></empty>
        <text>
            <label>About the DHC-6 Twin Otter</label>
        </text>
        <empty><stretch>true</stretch></empty>
        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>

    <hrule/>

    <group>
        <layout>vbox</layout>
        <padding>6</padding>

        <group>
            <layout>hbox</layout>

            <group>
                <layout>vbox</layout>

                <canvas>
                    <name>about</name>

                    <valign>fill</valign>
                    <halign>fill</halign>
                    <stretch>true</stretch>
                    <pref-width>640</pref-width>
                    <pref-height>480</pref-height>
                    <!--height>480</height-->
                    <nasal>
                        <load>
                            <![CDATA[

                            # you can add your canvas-specific code here
                            # this will get a handle to the parent canvas
                            var my_canvas = canvas.get(cmdarg());

                            var root = my_canvas.createGroup();
                            var path = "Aircraft/dhc6p/gui/dhc6.jpg";
                            var child = root.createChild("image")
                                .setFile(path)
                                .setSize(640, 480)
                                .setTranslation(2,2);
                            ]]>
                      </load>
                    </nasal>
                </canvas>
            </group>

            <vrule/>

            <group>
                <layout>vbox</layout>

                <group>
                    <layout>hbox</layout>
                    <default-padding>6</default-padding>
                    <text>
                        <halign>left</halign>
                        <label>Version:</label>
                    </text>
                    <text>
                        <halign>left</halign>
                        <label>1234.5-git</label>
                        <property>/sim/aircraft-version</property>
                    </text>
                    <empty><stretch>true</stretch></empty>
                </group>

                <hrule/>

                <text>
                    <halign>left</halign>
                    <label>Description:</label>
                </text>

                <textbox>
                    <name>basic description</name>
                    <halign>fill</halign>
                    <stretch>true</stretch>
                    <pref-height>180</pref-height>
                    <height>210</height>
                    <pref-width>500</pref-width>
                    <editable>false</editable>
                    <wrap>true</wrap>
                    <live>true</live>
                    <top-line>0</top-line>
                    <property>/sim/long-description</property>
                </textbox>

                <empty><stretch>true</stretch></empty>

                <text>
                    <halign>left</halign>
                    <label>Authors:</label>
                </text>

                <textbox>
                    <name>authors</name>
                    <halign>fill</halign>
                    <stretch>true</stretch>
                    <pref-height>120</pref-height>
                    <height>150</height>
                    <pref-width>500</pref-width>
                    <editable>false</editable>
                    <wrap>true</wrap>
                    <live>true</live>
                    <top-line>0</top-line>
                    <property>/sim/author</property>
                </textbox>
            </group>

        </group>
    </group>
        
    <hrule/>

    <group>
        <layout>hbox</layout>
        <default-padding>6</default-padding>

        <text>
            <halign>center</halign>
            <label>Useful links:</label>
        </text>

        <button>
            <halign>center</halign>
            <legend>Forum</legend>
            <binding>
                <command>nasal</command>
                <script>fgcommand("open-browser", props.Node.new({"url":"https://forum.flightgear.org/viewtopic.php?f=4&amp;t=21965"}));</script>
            </binding>
        </button>

        <button>
            <halign>left</halign>
            <legend>FlightGear Wiki</legend>
            <binding>
                <command>nasal</command>
                <script>fgcommand("open-browser", props.Node.new({"url":"http://wiki.flightgear.org/de_Havilland_Canada_DHC-6_Twin_Otter"}));</script>
            </binding>
        </button>

        <button>
            <halign>center</halign>
            <legend>Development repository</legend>
            <binding>
                <command>nasal</command>
                <script>fgcommand("open-browser", props.Node.new({"url":"https://sourceforge.net/p/flightgear/fgaddon/HEAD/tree/trunk/Aircraft/dhc6p/"}));</script>
            </binding>
        </button>

        <button>
            <halign>center</halign>
            <legend>Liveries (official)</legend>
            <binding>
                <command>nasal</command>
                <script>fgcommand("open-browser", props.Node.new({"url":"http://liveries.flightgear.org/aircraft.php?id=57"}));</script>
            </binding>
        </button>

        <button>
            <halign>center</halign>
            <legend>Liveries (unofficial, more comprehensive)</legend>
            <binding>
                <command>nasal</command>
                <script>fgcommand("open-browser", props.Node.new({"url":"https://sourceforge.net/projects/flightgear-dhc6-liveries/"}));</script>
            </binding>
        </button>

        <empty><stretch>true</stretch></empty>
        
        <button>
            <halign>right</halign>
            <legend>Close</legend>
            <equal>true</equal>
            <key>Esc</key>
            <default>true</default>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
        
    </group>

</PropertyList>
