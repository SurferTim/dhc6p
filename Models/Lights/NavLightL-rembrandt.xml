<PropertyList>

    <path>Lights.ac</path>
    <nopreview/>

    <animation>
        <type>select</type>
        <!--<object-name>light-volume</object-name>-->
        <!--<object-name>red-light-plate</object-name>-->
        <object-name>green-light-plate</object-name>
        <object-name>white-light-plate</object-name>
        <object-name>blue-light-plate</object-name>
        <object-name>lnd-light-plate</object-name>
    </animation>

    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>red-light-plate</object-name>
        <object-name>green-light-plate</object-name>
        <object-name>white-light-plate</object-name>
        <object-name>blue-light-plate</object-name>
    </effect>

    <animation>
        <type>noshadow</type>
        <object-name>red-light-plate</object-name>
        <object-name>green-light-plate</object-name>
        <object-name>white-light-plate</object-name>
        <object-name>blue-light-plate</object-name>
    </animation>

    <animation>
        <type>alpha-test</type>
        <alpha-factor>0.01</alpha-factor>
    </animation>

    <animation>
        <type>billboard</type>
        <object-name>red-light-plate</object-name>
        <object-name>green-light-plate</object-name>
        <object-name>white-light-plate</object-name>
        <object-name>blue-light-plate</object-name>
        <spherical type="bool">true</spherical>
    </animation>

    <animation>
        <type>select</type>
        <object-name>red-light-plate</object-name>
        <object-name>green-light-plate</object-name>
        <object-name>white-light-plate</object-name>
        <object-name>blue-light-plate</object-name>
        <condition>
            <and>
                <property>sim/multiplay/generic/int[2]</property>
                <greater-than>
                    <property>sim/multiplay/generic/float[3]</property>
                    <value>0.1</value>
                </greater-than>
            </and>
        </condition>
    </animation>

    <animation>
        <type>material</type>
        <object-name>red-light-plate</object-name>
        <object-name>green-light-plate</object-name>
        <object-name>white-light-plate</object-name>
        <object-name>blue-light-plate</object-name>
        <emission>
            <red>   0.027 </red>
            <green> 0.027 </green>
            <blue>  0.027 </blue>
            <factor-prop>sim/multiplay/generic/float[3]</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>dist-scale</type>
        <object-name>red-light-plate</object-name>
        <object-name>green-light-plate</object-name>
        <object-name>white-light-plate</object-name>
        <object-name>blue-light-plate</object-name>
        <interpolation>
            <entry><ind>    0 </ind><dep> 0.25 </dep></entry>
            <entry><ind>   20 </ind><dep> 0.50 </dep></entry>
            <entry><ind> 1500 </ind><dep> 5.00 </dep></entry>
        </interpolation>
    </animation>

    <animation>
        <type>light</type>
        <light-type>point</light-type>
        <object-name>light-volume</object-name>
        <position>
            <x> 0 </x>
            <y> 0 </y>
            <z> 0 </z>
        </position>
        <direction>
            <x>  0.0 </x>
            <y> -1.0 </y>
            <z> -0.4 </z>
        </direction>
        <ambient>
            <r>  0.8 </r>
            <g>  0.0 </g>
            <b>  0.0 </b>
            <a>  1.0 </a>
        </ambient>
        <diffuse>
            <r>  1.0 </r>
            <g>  0.0 </g>
            <b>  0.0 </b>
            <a>  1.0 </a>
        </diffuse>
        <specular>
            <r>  1.0 </r>
            <g>  0.5 </g>
            <b>  0.5 </b>
            <a>  1.0 </a>
        </specular>
        <dim-factor>
            <!--<property>systems/electrical/outputs/nav-light-plates</property>-->
            <property>sim/multiplay/generic/float[3]</property>
            <!-- optional begin -->
            <factor>0.01</factor>
            <offset>0</offset>
            <min>0</min>
            <max>1</max>
            <!-- optional end -->
        </dim-factor>
        <attenuation>
            <c>  0.8 </c>
            <l>  0.2 </l>
            <q>  2.0 </q>
        </attenuation>
        <exponent>  1.0   </exponent>
        <cutoff>   50.0   </cutoff>
        <near-m>    0.0   </near-m>
        <far-m>     8.0 </far-m>
    </animation>

    <animation>
        <type>select</type>
        <object-name>light-volume</object-name>
        <condition>
            <and>
                <property>sim/multiplay/generic/int[2]</property>
                <property>/sim/rendering/rembrandt/enabled</property>
            </and>
        </condition>
    </animation>

    <!-- If you need to change scale of the light-plate source, use and adapt : -->
    <!--animation>
        <type>scale</type>
        <object-name>light-volume</object-name>
        <x-offset> 1.0 </x-offset>
        <y-offset> 1.0 </y-offset>
        <z-offset> 1.0 </z-offset>
    </animation-->

</PropertyList>
