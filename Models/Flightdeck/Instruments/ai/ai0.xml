<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <path>ai.ac</path>

    <animation>
        <object-name>AIring</object-name>
        <object-name>AIneedle</object-name>
        <object-name>AIplane</object-name>
        <object-name>AIroll.needle</object-name>
        <object-name>AI.knob</object-name>
        <object-name>mount</object-name>

        <object-name>vitre</object-name>
    </animation>

    <animation>
        <type>shader</type>
        <shader>chrome</shader>
        <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
        <object-name>vitre</object-name>
    </animation>

    <animation>
        <type>noshadow</type>
        <object-name>vitre</object-name>
    </animation>

    <animation>
        <type>material</type>
        <object-name>backlight</object-name>
        <object-name>mount</object-name>
        <emission>
            <red>   0.381924    </red>
            <green> 0.30935844  </green>
            <blue>  0.161171928 </blue>
            <factor-prop>sim/multiplay/generic/float[10]</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>AIring</object-name>
        <object-name>AIneedle</object-name>
        <object-name>AIplane</object-name>
        <object-name>AIroll.needle</object-name>
        <object-name>AI.knob</object-name>
        <condition>
            <less-than>
                <property>controls/lighting/plt-eng-inst-emer-pnl-lts</property>
                <value>0.05</value>
            </less-than>
        </condition>
        <emission>
            <red>   0.381924    </red>
            <green> 0.30935844  </green>
            <blue>  0.161171928 </blue>
            <factor-prop>sim/multiplay/generic/float[10]</factor-prop>
        </emission>
    </animation>

    <effect>
        <inherits-from>Aircraft/dhc6p/Models/Effects/interior/dhc6-interior</inherits-from>
        <object-name>AIring</object-name>
        <object-name>AIneedle</object-name>
        <object-name>AIplane</object-name>
        <object-name>AIroll.needle</object-name>
        <object-name>AI.knob</object-name>
        <object-name>backlight</object-name>
        <object-name>mount</object-name>
        <!--object-name>vitre</object-name-->
    </effect>

    <effect>
        <inherits-from>Aircraft/dhc6p/Models/Effects/interior/dhc6-flashlight</inherits-from>
        <object-name>AIring</object-name>
        <object-name>AIneedle</object-name>
        <object-name>AIplane</object-name>
        <object-name>AIroll.needle</object-name>
        <object-name>AI.knob</object-name>
        <object-name>backlight</object-name>
        <object-name>mount</object-name>
        <!--object-name>vitre</object-name-->
    </effect>

    <!--effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>vitre</object-name>
        <condition>
            <property>sim/rendering/rembrandt/enabled</property>
        </condition>
    </effect-->

    <animation>
        <type>material</type>
        <object-name>AIring</object-name>
        <object-name>AIneedle</object-name>
        <object-name>AIplane</object-name>
        <object-name>AIroll.needle</object-name>
        <object-name>AI.knob</object-name>
        <condition>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <red>   0.07 </red>
            <green> 0.04 </green>
            <blue>  0.04 </blue>
            <factor-prop>systems/electrical/outputs/plt-eng-inst-emer-pnl-lts</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>AIneedle</object-name>
        <property>/instrumentation/attitude-indicator[0]/indicated-pitch-deg</property>
        <interpolation>
            <entry><ind>25.0</ind><dep>-0.015</dep></entry>
            <entry><ind>-25.0</ind><dep>0.015</dep></entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>AIneedle</object-name>
        <property>/instrumentation/attitude-indicator[0]/indicated-roll-deg</property>
        <factor>-1</factor>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>AIring</object-name>
        <property>/instrumentation/attitude-indicator[0]/indicated-roll-deg</property>
        <factor>-1</factor>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>AIplane</object-name>
        <property>instrumentation/attitude-indicator[0]/horizon-offset-deg</property>
        <interpolation>
            <entry><ind>10.0</ind><dep>0.006</dep></entry>
            <entry><ind>-10.0</ind><dep>-0.006</dep></entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>AI.knob</object-name>
        <property>instrumentation/attitude-indicator[0]/horizon-offset-deg</property>
        <factor>10</factor>
        <center>
            <x-m>0.004016</x-m>
            <y-m>-0.036714</y-m>
            <z-m>-0.03615</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>AI.knob</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/attitude-indicator[0]/horizon-offset-deg</property>
                <step>0.5</step>
                <min>-10</min>
                <max>10</max>
                <wrap>0</wrap>
            </binding>
        </action>
        <action>
            <button>1</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/attitude-indicator[0]/horizon-offset-deg</property>
                <step>-0.5</step>
                <min>-10</min>
                <max>10</max>
                <wrap>0</wrap>
            </binding>
        </action>
        <action>
            <button>3</button>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/attitude-indicator[0]/horizon-offset-deg</property>
                <step>0.5</step>
                <min>-10</min>
                <max>10</max>
                <wrap>0</wrap>
            </binding>
        </action>
        <action>
            <button>4</button>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/attitude-indicator[0]/horizon-offset-deg</property>
                <step>-0.5</step>
                <min>-10</min>
                <max>10</max>
                <wrap>0</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>horizon-offset</tooltip-id>
                <label>Horizon offset: %.1f deg</label>
                <property>instrumentation/attitude-indicator[0]/horizon-offset-deg</property>
            </binding>
        </hovered>
    </animation>

    <!-- TEXT OSG -->
    <text>
        <name>textosg</name>
        <type type="string">literal</type>
        <text type="string">Artifical Horizon</text>
        <draw-text type="bool">true</draw-text>
        <font>Helvetica.txf</font>
        <character-size type="double">0.014</character-size>
        <character-aspect-ratio type="double">1.0</character-aspect-ratio>
        <axis-alignment>yz-plane</axis-alignment>
        <max-height>0.06</max-height>
        <max-width>0.05</max-width>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
        <alignment>center-center</alignment>
        <offsets>
            <x-m> 0.005 </x-m>
            <y-m> 0.000 </y-m>
            <z-m> 0.000 </z-m>
        </offsets>
    </text>

    <animation>
        <type>material</type>
        <object-name>textosg</object-name>
        <emission>
            <red>   0.8 </red>
            <green> 0.8 </green>
            <blue>  0.0 </blue>
        </emission>
    </animation>

    <animation>
        <type>select</type>
        <object-name>textosg</object-name>
        <condition>
            <property>sim/panel-hotspots</property>
        </condition>
    </animation>

    <animation>
        <name>BackLightAnimation</name>
        <type>light</type>
        <light-type>spot</light-type>
        <object-name>backlight</object-name>
        <position>
            <x> 0.025 </x>
            <y> 0.00 </y>
            <z>-0.05 </z>
        </position>
        <direction>
            <x> -1.0 </x>
            <y>  0.0 </y>
            <z>  1.0 </z>
        </direction>
        <ambient>
            <r>  0.0 </r>
            <g>  0.0 </g>
            <b>  0.0 </b>
            <a>  1.0 </a>
        </ambient>
        <diffuse>
            <r>  0.5 </r>
            <g>  0.404 </g>
            <b>  0.2 </b>
            <a>  1.0 </a>
        </diffuse>
        <specular>
            <r>  0.0 </r>
            <g>  0.0 </g>
            <b>  0.0 </b>
            <a>  1.0 </a>
        </specular>
        <dim-factor>
            <property>systems/electrical/outputs/instrument-lights</property>
            <!-- optional begin -->
            <factor>0.04</factor>
            <offset>0</offset>
            <min>0</min>
            <max>1</max>
            <!-- optional end -->
        </dim-factor>
        <attenuation>
            <c>  0.2 </c>
            <l>  0.2 </l>
            <q>  0.4 </q>
        </attenuation>
        <exponent>  8.0 </exponent>
        <cutoff>   48.0   </cutoff>
        <near-m>    0.0   </near-m>
        <far-m>     0.09 </far-m>
    </animation>

    <animation>
        <type>select</type>
        <object-name>BackLightAnimation</object-name>
        <condition>
            <and>
                <property>controls/electric/battery-switch</property>
                <property>sim/rendering/rembrandt/enabled</property>
            </and>
        </condition>
    </animation>

</PropertyList>
