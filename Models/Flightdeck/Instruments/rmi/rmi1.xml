<?xml version="1.0" encoding="UTF-8"?>

<!-- KI-229 RMI -->

<PropertyList>

    <path>rmi.ac</path>

    <animation>
        <type>scale</type>
        <object-name>Bugminus</object-name>
        <object-name>Bugplus</object-name>
        <object-name>NAV1BUTT</object-name>
        <object-name>NAV2BUTT</object-name>
        <object-name>RMI</object-name>
        <object-name>RMI-bug</object-name>
        <object-name>RMI.adf</object-name>
        <object-name>RMI.brgN1</object-name>
        <object-name>RMI.brgN2</object-name>
        <object-name>RMI.face</object-name>
        <object-name>RMI.ticks</object-name>
        <object-name>V1on</object-name>
        <object-name>V2on</object-name>
        <object-name>knob</object-name>
        <object-name>mount</object-name>
        <object-name>switchbox</object-name>
        <object-name>vitre</object-name>
        <object-name>backlight</object-name>
        <object-name>vitre</object-name>
        <x-offset>1.0</x-offset>
        <y-offset>0.9</y-offset>
        <z-offset>0.9</z-offset>
    </animation>

    <animation>
        <object-name>RMI</object-name>
        <object-name>RMI.face</object-name>
        <object-name>RMI.ticks</object-name>
        <object-name>knob</object-name>
        <object-name>RMI-bug</object-name>
        <object-name>RMI.adf</object-name>
        <object-name>RMI.brgN2</object-name>
        <object-name>RMI.brgN1</object-name>
        <object-name>switchbox</object-name>
        <object-name>NAV1BUTT</object-name>
        <object-name>NAV2BUTT</object-name>
        <object-name>V1on</object-name>
        <object-name>V2on</object-name>
        <object-name>Bugminus</object-name>
        <object-name>Bugplus</object-name>
        <object-name>mount</object-name>
        <object-name>vitre</object-name>
    </animation>
           
    <animation>
        <type>noshadow</type>
        <object-name>vitre</object-name>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Bugminus</object-name>
        <object-name>Bugplus</object-name>
        <object-name>RMI</object-name>
        <object-name>backlight</object-name>
        <object-name>mount</object-name>
        <object-name>switchbox</object-name>
        <emission>
            <red>0.2</red>
            <green>0.2</green>
            <blue>0.2</blue>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>RMI.adf</object-name>
        <object-name>RMI.face</object-name>
        <object-name>RMI.ticks</object-name>
        <object-name>RMI-bug</object-name>
        <object-name>RMI.brgN1</object-name>
        <object-name>RMI.brgN2</object-name>
        <object-name>NAV1BUTT</object-name>
        <object-name>NAV2BUTT</object-name>
        <object-name>V1on</object-name>
        <object-name>V2on</object-name>
        <object-name>knob</object-name>
	<condition>
		<and>
			<property>controls/electric/power-source</property>
			<property>controls/electric/dc-master</property>
		</and>
	</condition>
        <emission>
            <red>2</red>
            <green>1.5</green>
            <blue>1</blue>
            <factor-prop>controls/lighting/coplt-radio-va-pnl-lts</factor-prop>
        </emission>
    </animation>

    <effect>
        <inherits-from>Aircraft/dhc6p/Models/Effects/interior/dhc6-interior</inherits-from>
        <object-name>Bugminus</object-name>
        <object-name>Bugplus</object-name>
        <object-name>NAV1BUTT</object-name>
        <object-name>NAV2BUTT</object-name>
        <object-name>RMI</object-name>
        <object-name>RMI-bug</object-name>
        <object-name>RMI.adf</object-name>
        <object-name>RMI.brgN1</object-name>
        <object-name>RMI.brgN2</object-name>
        <object-name>RMI.face</object-name>
        <object-name>RMI.ticks</object-name>
        <object-name>V1on</object-name>
        <object-name>V2on</object-name>
        <object-name>backlight</object-name>
        <object-name>knob</object-name>
        <object-name>mount</object-name>
        <object-name>switchbox</object-name>
        <!--object-name>vitre</object-name>
        <object-name>vitre.001</object-name-->
    </effect>

    <effect>
        <inherits-from>Aircraft/dhc6p/Models/Effects/interior/dhc6-flashlight</inherits-from>
        <object-name>Bugminus</object-name>
        <object-name>Bugplus</object-name>
        <object-name>NAV1BUTT</object-name>
        <object-name>NAV2BUTT</object-name>
        <object-name>RMI</object-name>
        <object-name>RMI-bug</object-name>
        <object-name>RMI.adf</object-name>
        <object-name>RMI.brgN1</object-name>
        <object-name>RMI.brgN2</object-name>
        <object-name>RMI.face</object-name>
        <object-name>RMI.ticks</object-name>
        <object-name>V1on</object-name>
        <object-name>V2on</object-name>
        <object-name>backlight</object-name>
        <object-name>knob</object-name>
        <object-name>mount</object-name>
        <object-name>switchbox</object-name>
        <!--object-name>vitre</object-name>
        <object-name>vitre.001</object-name-->
    </effect>

    <animation>
        <type>shader</type>
        <shader>chrome</shader>
        <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
        <object-name>vitre</object-name>
    </animation>

    <animation>
        <type>material</type>
        <object-name>RMI.face</object-name>
        <object-name>RMI.ticks</object-name>
        <object-name>RMI.adf</object-name>
        <object-name>RMI.brgN1</object-name>
        <object-name>RMI.brgN2</object-name>
        <object-name>RMI-bug</object-name>
        <object-name>V1on</object-name>
        <object-name>V2on</object-name>
        <object-name>knob</object-name>
        <object-name>NAV1BUTT</object-name>
        <object-name>NAV2BUTT</object-name>
        <condition>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <red>   0.07 </red>
            <green> 0.04 </green>
            <blue>  0.04 </blue>
            <factor-prop>systems/electrical/outputs/plt-eng-inst-emer-pnl-lts</factor-prop>
        </emission>
    </animation>
           
    <animation>
        <type>material</type>
        <object-name>NAV1BUTT</object-name>
        <object-name>NAV2BUTT</object-name>
        <condition>
            <not>
                <property>sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <red>   0.01 </red>
            <green> 0.01 </green>
            <blue>  0.01 </blue>
            <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>select</type>
        <object-name>V1on</object-name>
        <object-name>RMI.brgN1</object-name>
        <condition>
            <property>/controls/armament/station[5]/release-all</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>V2on</object-name>
        <object-name>RMI.brgN2</object-name>
        <condition>
            <property>/controls/armament/station[6]/release-all</property>
        </condition>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>RMI.face</object-name>
        <property>instrumentation/heading-indicator-real-dg/indicated-heading-deg</property>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>RMI.adf</object-name>
        <property>instrumentation/adf/indicated-bearing-deg</property>
        <axis>
            <x> -1 </x>
            <y>  0 </y>
            <z>  0 </z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>RMI.brgN1</object-name>
        <!-- VOR1 pntr should follow DG compass card - not show bearing off plane -->
        <!-- property>orientation/heading-deg</property -->
        <property>instrumentation/heading-indicator-real-dg/indicated-heading-deg</property>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>
           
    <animation>
        <type>rotate</type>
        <object-name>RMI.brgN1</object-name>
        <property>instrumentation/nav[0]/radials/reciprocal-radial-deg</property>
        <axis>
            <x> -1 </x>
            <y>  0 </y>
            <z>  0 </z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>RMI.brgN2</object-name>
        <!-- VOR2 pntr should follow DG compass card - not show bearing off plane -->
        <!-- property>orientation/heading-deg</property -->
        <property>instrumentation/heading-indicator-real-dg/indicated-heading-deg</property>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>
           
    <animation>
        <type>rotate</type>
        <object-name>RMI.brgN2</object-name>
        <property>instrumentation/nav[1]/radials/reciprocal-radial-deg</property>
        <axis>
            <x> -1 </x>
            <y>  0 </y>
            <z>  0 </z>
        </axis>
    </animation>

    <!-- Heading bug dial -->
    <animation>
        <type>rotate</type>
        <object-name>RMI-bug</object-name>
        <property>/instrumentation/heading-indicator-real-dg/indicated-heading-deg</property>
        <factor>-1</factor>
        <axis>
            <x> -1 </x>
            <y>  0 </y>
            <z>  0 </z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>RMI-bug</object-name>
        <property>instrumentation/heading-indicator-real-dg/heading-bug-deg</property>
        <axis>
            <x> -1 </x>
            <y>  0 </y>
            <z>  0 </z>
        </axis>
    </animation>

    <!-- Heading Bug control -->
    <animation>
        <type>pick</type>
        <object-name>Bugminus</object-name>
        <visible>false</visible>
        <action>
            <name>small decrease</name>
            <button>0</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/heading-indicator-real-dg/heading-bug-deg</property>
                <step>-1</step>
                <min>0</min>
                <max>360</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <name>large decrease</name>
            <button>1</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/heading-indicator-real-dg/heading-bug-deg</property>
                <step>-5</step>
                <min>0</min>
                <max>360</max>
                <wrap>1</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Bugplus</object-name>
        <visible>false</visible>
        <action>
            <name>small increase</name>
            <button>0</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/heading-indicator-real-dg/heading-bug-deg</property>
                <step>1</step>
                <min>0</min>
                <max>360</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <name>large increase</name>
            <button>1</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/heading-indicator-real-dg/heading-bug-deg</property>
                <step>5</step>
                <min>0</min>
                <max>360</max>
                <wrap>1</wrap>
            </binding>
        </action>
    </animation>

    <!--HDG Set-->
    <animation>
        <type>knob</type>
        <object-name>knob</object-name>
        <center>
            <x-m>0.01172</x-m>
            <y-m>0.03783</y-m>
            <z-m>-0.03707</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/heading-indicator-real-dg/heading-bug-deg</property>
                <factor>1</factor>
                <min>0</min>
                <max>360</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <!-- faster rate of change than the default -->
        <drag-scale-px>4</drag-scale-px>
        <shift-repeat type="int">5</shift-repeat>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>rmi-hdg</tooltip-id>
                <label>Heading Bug: %.0f deg</label>
                <property>instrumentation/heading-indicator-real-dg/heading-bug-deg</property>
            </binding>
        </hovered>   
    </animation>
         
    <!-- NAV1 Button connect the NAV gauge to Nav1
    /controls/armament/station[5]/release-all = false/true
    /controls/armament/station[6]/release-all = false/true
    /controls/armament/station[7]/release-all = false/true
    -->
    <animation>
        <type>pick</type>
        <object-name>NAV1BUTT</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <!-- NAV1 on -->
                <property>/controls/armament/station[5]/release-all</property>
                <value type="bool">true</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <!-- NAV2 off -->
                <property>/controls/armament/station[6]/release-all</property>
                <value type="bool">false</value>
            </binding>
            <binding>
                <command>property-toggle</command>
                <property>sim/sound/click2</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>NAV1BUTT</object-name>
        <property>/controls/armament/station[5]/release-all-pos</property>
        <factor>-0.004</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>NAV2BUTT</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <!-- NAV1 off -->
                <property>/controls/armament/station[5]/release-all</property>
                <value type="bool">false</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <!-- NAV2 on -->
                <property>/controls/armament/station[6]/release-all</property>
                <value type="bool">true</value>
            </binding>
            <binding>
                <command>property-toggle</command>
                <property>sim/sound/click2</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>NAV2BUTT</object-name>
        <property>/controls/armament/station[6]/release-all-pos</property>
        <factor>-0.004</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <!-- TEXT OSG -->
    <text>
        <name>textosg</name>
        <type type="string">literal</type>
        <text type="string">RMI</text>
        <draw-text type="bool">true</draw-text>
        <font>Helvetica.txf</font>
        <character-size type="double">0.014</character-size>
        <character-aspect-ratio type="double">1.0</character-aspect-ratio>
        <axis-alignment>yz-plane</axis-alignment>
        <max-height>0.06</max-height>
        <max-width>0.05</max-width>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
        <alignment>center-center</alignment>
        <offsets>
            <x-m>  0.005 </x-m>
            <y-m>  0.000 </y-m>
            <z-m>  0.000 </z-m>
        </offsets>
    </text>

    <animation>
        <type>material</type>
        <object-name>textosg</object-name>
        <emission>
            <red>   0.8 </red>
            <green> 0.8 </green>
            <blue>  0.0 </blue>
        </emission>
    </animation>

    <animation>
        <type>select</type>
        <object-name>textosg</object-name>
        <condition>
            <property>sim/panel-hotspots</property>
        </condition>
    </animation>

    <!--########## Cone de lumiÃ¨re Rembrandt #############-->
    <animation>
        <name>BackLightAnimation</name>
        <type>light</type>
        <light-type>spot</light-type>
        <object-name>backlight</object-name>
        <position>
            <x> 0.03 </x>
            <y> 0.00 </y>
            <z>-0.05 </z>
        </position>
        <direction>
            <x> -1.0 </x>
            <y>  0.0 </y>
            <z>  1.0 </z>
        </direction>
        <ambient>
            <r>  0.0 </r>
            <g>  0.0 </g>
            <b>  0.0 </b>
            <a>  1.0 </a>
        </ambient>
        <diffuse>
            <r>  0.5 </r>
            <g>  0.404 </g>
            <b>  0.2 </b>
            <a>  1.0 </a>
        </diffuse>
        <specular>
            <r>  0.0 </r>
            <g>  0.0 </g>
            <b>  0.0 </b>
            <a>  1.0 </a>
        </specular>
        <dim-factor>
            <property>systems/electrical/outputs/instrument-lights</property>
            <!-- optional begin -->
            <factor>0.04</factor>
            <offset>0</offset>
            <min>0</min>
            <max>1</max>
            <!-- optional end -->
        </dim-factor>
        <attenuation>
            <c>  0.2 </c>
            <l>  0.2 </l>
            <q>  0.4 </q>
        </attenuation>
        <exponent>  8.0 </exponent>
        <cutoff>   48.0   </cutoff>
        <near-m>    0.0   </near-m>
        <far-m>     0.09 </far-m>
    </animation>

    <animation>
        <type>select</type>
        <object-name>BackLightAnimation</object-name>
        <condition>
            <and>
                <property>controls/electric/battery-switch</property>
                <property>sim/rendering/rembrandt/enabled</property>
            </and>
        </condition>
    </animation>

</PropertyList>
