<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <path>oat.ac</path>

    <!--animation>
        <type>material</type>
        <object-name>OAT</object-name>
        <emission>
            <red>0.381924</red>
            <green>0.30935844</green>
            <blue>0.161171928</blue>
            <factor-prop>sim/multiplay/generic/float[10]</factor-prop>
        </emission>
    </animation-->

    <animation>
        <type>material</type>
        <object-name>OAT.face</object-name>
        <object-name>OAT.needle</object-name>
        <emission>
            <red>0.04</red>
            <green>0.04</green>
            <blue>0.03</blue>
            <factor-prop>systems/electrical/outputs/coplt-radio-va-pnl-lts</factor-prop>

        </emission>
    </animation>

    <effect>
        <inherits-from>Aircraft/dhc6p/Models/Effects/interior/dhc6-interior</inherits-from>
        <object-name>OAT</object-name>
        <object-name>OAT.face</object-name>
        <object-name>OAT.needle</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/dhc6p/Models/Effects/interior/dhc6-flashlight</inherits-from>
        <object-name>OAT</object-name>
        <object-name>OAT.face</object-name>
        <object-name>OAT.needle</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>OAT.face</object-name>
        <object-name>OAT.needle</object-name>
        <emission>
            <red>   0.04 </red>
            <green> 0.02 </green>
            <blue>  0.01 </blue>
            <factor-prop>systems/electrical/outputs/plt-eng-inst-emer-pnl-lts</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>OAT.needle</object-name>
        <property>environment/temperature-degf</property>
        <interpolation>
            <entry><ind>-70.0</ind><dep>0.0</dep></entry>
            <entry><ind>150.0</ind><dep>326.5</dep></entry>
        </interpolation>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>OAT.face</object-name>
        <visible>true</visible>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Temperature degf</tooltip-id>
                <label>Air Temperature: %d Â°F</label>
                <property>/environment/temperature-degf</property>
            </binding>
        </hovered>
    </animation>

    <!-- TEXT OSG -->
    <text>
        <name>textosg</name>
        <type type="string">literal</type>
        <text type="string">Temp deg F</text>
        <draw-text type="bool">true</draw-text>
        <font>Helvetica.txf</font>
        <character-size type="double">0.014</character-size>
        <character-aspect-ratio type="double">1.0</character-aspect-ratio>
        <axis-alignment>yz-plane</axis-alignment>
        <max-height>0.06</max-height>
        <max-width>0.05</max-width>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
        <alignment>center-center</alignment>
        <offsets>
            <x-m>  0.035 </x-m>
            <y-m>  0.000 </y-m>
            <z-m>  0.000 </z-m>
        </offsets>
    </text>

    <animation>
        <type>material</type>
        <object-name>textosg</object-name>
        <emission>
            <red>   0.8 </red>
            <green> 0.8 </green>
            <blue>  0.0 </blue>
        </emission>
    </animation>

    <animation>
        <type>select</type>
        <object-name>textosg</object-name>
        <condition>
            <property>sim/panel-hotspots</property>
        </condition>
    </animation>

</PropertyList>
