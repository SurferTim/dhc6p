<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <path>ias-set.ac</path>

    <animation>
        <type>material</type>
        <object-name>cadre-sel_board</object-name>
        <object-name>ias.dwn</object-name>
        <object-name>ias.fond</object-name>
        <object-name>ias.up</object-name>
        <emission>
            <red>0.381924</red>
            <green>0.30935844</green>
            <blue>0.161171928</blue>
            <factor-prop>sim/multiplay/generic/float[10]</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>ias.1</object-name>
        <object-name>ias.10</object-name>
        <object-name>ias.100</object-name>
        <object-name>ias.knob</object-name>
        <condition>
            <less-than>
                <property>controls/lighting/plt-eng-inst-emer-pnl-lts</property>
                <value>0.05</value>
            </less-than>
        </condition>
        <emission>
            <red>0.381924</red>
            <green>0.30935844</green>
            <blue>0.161171928</blue>
            <factor-prop>sim/multiplay/generic/float[10]</factor-prop>
        </emission>
    </animation>


    <animation>
        <type>material</type>        
        <object-name>ias.100</object-name>
        <object-name>ias.10</object-name>
        <object-name>ias.1</object-name>
        <emission>
            <red>0.07</red>
            <green>0.04</green>
            <blue>0.04</blue>
            <factor-prop>systems/electrical/outputs/plt-eng-inst-emer-pnl-lts</factor-prop>
        </emission>
    </animation>

     <animation>
        <type>material</type>
        <object-name>ias.knob</object-name>
        <condition>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
            <property>systems/electrical/outputs/instrument-lights</property>
        </condition>
        <emission>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
            <factor-prop>systems/electrical/outputs/plt-eng-inst-emer-pnl-lts</factor-prop>
        </emission>
    </animation>

    <effect>
        <inherits-from>Aircraft/dhc6p/Models/Effects/interior/dhc6-interior</inherits-from>
        <object-name>cadre-sel_board</object-name>
        <object-name>ias.1</object-name>
        <object-name>ias.10</object-name>
        <object-name>ias.100</object-name>
        <object-name>ias.dwn</object-name>
        <object-name>ias.fond</object-name>
        <object-name>ias.knob</object-name>
        <object-name>ias.up</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/dhc6p/Models/Effects/interior/dhc6-flashlight</inherits-from>
        <object-name>cadre-sel_board</object-name>
        <object-name>ias.1</object-name>
        <object-name>ias.10</object-name>
        <object-name>ias.100</object-name>
        <object-name>ias.dwn</object-name>
        <object-name>ias.fond</object-name>
        <object-name>ias.knob</object-name>
        <object-name>ias.up</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>ias.100</object-name>
        <object-name>ias.10</object-name>
        <object-name>ias.1</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/nav</property>
                <value>1</value>
            </greater-than>
        </condition>
    </animation>
     
    <!--Affich IAS-->
    <animation>
        <type>textranslate</type>
        <object-name>ias.100</object-name>
        <property>autopilot/settings/target-speed-kt</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
             <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ias.10</object-name>
        <property>autopilot/settings/target-speed-kt</property>
        <factor>0.01</factor>
        <step>10</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ias.1</object-name>
        <property>autopilot/settings/target-speed-kt</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
  
    <!--HOTSPOTS-->
    <!--Selectors--> 

    <!--IndicatedAirspeedSet-->
    <animation>
        <type>rotate</type>
        <object-name>ias.knob</object-name>
        <property>autopilot/settings/target-speed-kt</property>
        <factor>5</factor>
        <center>
            <x-m>0.00889 </x-m>
            <y-m>0.03135</y-m>
            <z-m>0.00014 </z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>ias.knob</object-name>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/settings/target-speed-kt</property>
                <factor>1</factor>
                <min>70</min>
                <max>170</max>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>ap-ias-setting</tooltip-id>
                <label>AP Airspeed: %.0f kts</label>
                <property>autopilot/settings/target-speed-kt</property>
            </binding>
        </hovered>   
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ias.up</object-name>
        <visible>false</visible>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/settings/target-speed-kt</property>
                <step>1</step>
                <min>70</min>
                <max>170</max>
                <wrap>false</wrap> 
            </binding>           
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ias.dwn</object-name>
        <visible>false</visible>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/settings/target-speed-kt</property>
                <step>-1</step>
                <min>70</min>
                <max>170</max>
                <wrap>false</wrap> 
            </binding>           
        </action>
    </animation>
 
    
    <animation>
        <type>pick</type>
        <object-name>ias.up</object-name>
        <action>
            <button>1</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/settings/target-speed-kt</property>
                <step>10</step>
                <min>70</min>
                <max>170</max>
                <wrap>false</wrap> 
            </binding>           
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ias.dwn</object-name>
        <action>
            <button>1</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/settings/target-speed-kt</property>
                <step>-10</step>
                <min>70</min>
                <max>170</max>
                <wrap>false</wrap> 
            </binding>           
        </action>
    </animation>
 
 
    <!-- TEXT OSG -->
    <text>
        <name>textosg</name>
        <type type="string">literal</type>
        <text type="string">Ias</text>
        <draw-text type="bool">true</draw-text>
        <font>Helvetica.txf</font>
        <character-size type="double">0.014</character-size>
        <character-aspect-ratio type="double">1.0</character-aspect-ratio>
        <axis-alignment>yz-plane</axis-alignment>
        <max-height>0.06</max-height>
        <max-width>0.05</max-width>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
        <alignment>center-center</alignment>
        <offsets>
            <x-m>  0.025 </x-m>
            <y-m>  -0.005 </y-m>
            <z-m>  0.005 </z-m>
        </offsets>
    </text>

    <animation>
        <type>material</type>
        <object-name>textosg</object-name>
        <emission>
            <red>   0.8 </red>
            <green> 0.8 </green>
            <blue>  0.0 </blue>
        </emission>
    </animation>

    <animation>
        <type>select</type>
        <object-name>textosg</object-name>
        <condition>
            <property>sim/panel-hotspots</property>
        </condition>
    </animation>

 </PropertyList>
