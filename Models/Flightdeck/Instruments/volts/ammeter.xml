<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <path>ammeter.ac</path>

    <animation>
        <type>material</type>
        <object-name>ampbezel</object-name>
        <emission>
            <red>0.381924</red>
            <green>0.30935844</green>
            <blue>0.161171928</blue>
            <factor-prop>sim/multiplay/generic/float[10]</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>amp.face</object-name>
        <object-name>ampneedle</object-name>
        <condition>
            <less-than>
                <property>controls/lighting/coplt-radio-va-pnl-lts</property>
                <value>0.05</value>
            </less-than>
        </condition>
        <emission>
            <red>0.381924</red>
            <green>0.30935844</green>
            <blue>0.161171928</blue>
            <factor-prop>sim/multiplay/generic/float[10]</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>amp.face</object-name>
        <object-name>ampneedle</object-name>
        <emission>
            <red>0.07</red>
            <green>0.04</green>
            <blue>0.04</blue>
            <factor-prop>systems/electrical/outputs/coplt-radio-va-pnl-lts</factor-prop>
        </emission>
    </animation>

    <effect>
        <inherits-from>Aircraft/dhc6p/Models/Effects/interior/dhc6-interior</inherits-from>
        <object-name>amp.face</object-name>
        <object-name>ampbezel</object-name>
        <object-name>ampneedle</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/dhc6p/Models/Effects/interior/dhc6-flashlight</inherits-from>
        <object-name>amp.face</object-name>
        <object-name>ampbezel</object-name>
        <object-name>ampneedle</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>amp.face</object-name>
        <visible>true</visible>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Load</tooltip-id>
                <label>DC Load: %d Ampere</label>
                <property>instrumentation/volt-amp-meter/indicated-amps</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>ampneedle</object-name>
        <property>instrumentation/volt-amp-meter/indicated-amps</property>
        <interpolation>
            <entry><ind>-100.0</ind><dep>-42.5</dep></entry>
            <entry><ind> 100.0</ind><dep> 42.5</dep></entry>
        </interpolation>
        <center>
            <x-m>0.0</x-m>
            <y-m>0.0</y-m>
            <z-m>-0.007</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <!-- TEXT OSG -->
    <text>
        <name>textosg</name>
        <type type="string">literal</type>
        <text type="string">Amp</text>
        <draw-text type="bool">true</draw-text>
        <font>Helvetica.txf</font>
        <character-size type="double">0.014</character-size>
        <character-aspect-ratio type="double">1.0</character-aspect-ratio>
        <axis-alignment>yz-plane</axis-alignment>
        <max-height>0.06</max-height>
        <max-width>0.05</max-width>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
        <alignment>center-center</alignment>
        <offsets>
            <x-m>  0.035 </x-m>
            <y-m>  0.000 </y-m>
            <z-m>  0.000 </z-m>
        </offsets>
    </text>

    <animation>
        <type>material</type>
        <object-name>textosg</object-name>
        <emission>
            <red>   0.8 </red>
            <green> 0.8 </green>
            <blue>  0.0 </blue>
        </emission>
    </animation>

    <animation>
        <type>select</type>
        <object-name>textosg</object-name>
        <condition>
            <property>sim/panel-hotspots</property>
        </condition>
    </animation>

</PropertyList>
