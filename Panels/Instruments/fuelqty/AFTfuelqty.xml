<?xml version="1.0" encoding="UTF-8"?>

<!-- 2D Rear Fuel Quantity gauge for the DHC-6 Twin Otter

Copyright (c) 2015 Jonathan Schellhase (DG-505) -->

<PropertyList>

    <name>AFT Fuel QTY</name>
    <w-base>512</w-base>
    <h-base>512</h-base>

    <layers>

        <layer>
            <name>Background</name>
            <w>512</w>
            <h>512</h>
            <texture>
                <path>Aircraft/dhc6p/Panels/Instruments/fuelqty/AFTfuelqty-background.png</path>
                <x1>0.0</x1>
                <x2>1.0</x2>
                <y1>0.0</y1>
                <y2>1.0</y2>
            </texture>
        </layer>

        <layer>
            <name>Needle</name>
            <w>15</w>
            <h>252</h>
            <texture>
                <path>Aircraft/dhc6p/Panels/Instruments/fuelqty/needle.png</path>
                <x1>0.0</x1>
                <x2>1.0</x2>
                <y1>0.0</y1>
                <y2>1.0</y2>
            </texture>
            <transformations>
                <transformation>
                    <type>rotation</type>
                    <property>consumables/fuel/tank[1]/level-lbs</property>
                    <min>0.0</min>
                    <max>1400.0</max>
                    <scale>1.0</scale>
                    <interpolation>
                        <entry><ind>    0 </ind><dep>   0 </dep></entry>
                        <entry><ind> 1400 </ind><dep> 320 </dep></entry>
                    </interpolation>
                    <offset>-160</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>80</offset>
                </transformation>
            </transformations>
        </layer>

    </layers>

</PropertyList>
