<?xml version="1.0" encoding="UTF-8"?>

<!-- 2D Left Torque Pressure gauge for the DHC-6 Twin Otter

Copyright (c) 2015 Jonathan Schellhase (DG-505) -->

<PropertyList>

    <name>Left Torque Pressure</name>
    <w-base>512</w-base>
    <h-base>512</h-base>

    <layers>

        <layer>
            <name>Background</name>
            <w>512</w>
            <h>512</h>
            <texture>
                <path>Aircraft/dhc6p/Panels/Instruments/torque/torque-background.png</path>
                <x1>0.0</x1>
                <x2>1.0</x2>
                <y1>0.0</y1>
                <y2>1.0</y2>
            </texture>
        </layer>

        <layer>
            <name>Needle</name>
            <w>26</w>
            <h>369</h>
            <texture>
                <path>Aircraft/dhc6p/Panels/Instruments/torque/needle.png</path>
                <x1>0.0</x1>
                <x2>1.0</x2>
                <y1>0.0</y1>
                <y2>1.0</y2>
            </texture>
            <transformations>
                <transformation>
                    <type>rotation</type>
                    <property>engines/engine[0]/torque-ftlb</property>
                    <min>0.0</min>
                    <max>2000.0</max>
                    <scale>1.0</scale>
                    <interpolation>
                        <entry><ind>    0 </ind><dep>   0 </dep></entry>
                        <entry><ind> 2000 </ind><dep> 228 </dep></entry>
                    </interpolation>
                </transformation>
                <transformation>
                    <type>rotation</type>
                    <property>engines/engine[0]/reverse</property>
                    <min>0.0</min>
                    <max>1.0</max>
                    <scale>1.0</scale>
                    <interpolation>
                        <entry><ind> 0 </ind><dep>   0 </dep></entry>
                        <entry><ind> 1 </ind><dep> 120 </dep></entry>
                    </interpolation>
                </transformation>
            </transformations>
        </layer>

    </layers>

</PropertyList>
